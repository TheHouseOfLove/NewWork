<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_selector_height"
    android:gravity="bottom"
    android:background="@color/common_blue">
    <LinearLayout
        android:id="@+id/layout_myfocus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_white"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/textView_left"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_myfocus"
            android:gravity="center"
            android:textColor="@drawable/textcolor_main"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_right"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_myfocus"
            android:gravity="center"
            android:textColor="@drawable/textcolor_main"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>