<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/out_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_upgrade_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="提示"
        android:textColor="@color/common_black"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/txt_pkg_size_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:padding="6dp"
        android:text="发现新版本，请立即更新"
        android:textColor="@color/common_font_black"
        android:textSize="14sp" />


    <!-- line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_bg"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/dialog_upgrade_btn_ok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_rectangle_two_white"
        android:text="升级"
        android:textColor="@color/common_blue"
        android:textSize="16sp" />

</LinearLayout>
